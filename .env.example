# MCP Host Configuration
MCP_HOST_NAME="your_mcp_host_name"
MCP_HOST_PORT=8000
MCP_DEBUG=true
MCP_LOG_LEVEL=INFO

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=YOUR_LOCALLY_SERVED_MODEL #choose a llama model or something like that
OLLAMA_TIMEOUT=120

# Authentication
AUTH_ENABLED=true
AUTH_SECRET_KEY=your-secret-key-here-change-in-production
AUTH_TOKEN_EXPIRY=3600

# Weather.gov API
NWS_API_BASE = "https://api.weather.gov"
WEATHERGOV_USER_AGENT = "weather-app/1.0"
WEATHERGOV_TIMEOUT=30

# Open-Meteo API
OPENMETEO_API_BASE_URL = "https://api.open-meteo.com/v1/forecast"
OPENMETEO_GEOCODING_URL = "https://geocoding-api.open-meteo.com/v1/search"
OPENMETEO_TIMEOUT=30

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Session Management
SESSION_MAX_AGE=1800
SESSION_CLEANUP_INTERVAL=300

# Context Management
CONTEXT_MAX_TOKENS=8000
CONTEXT_RETENTION_COUNT=10
